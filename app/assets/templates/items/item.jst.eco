<div class="item <%= @kind %> <%= @archive ? 'archive' : '' %>" data-id="<%= @id %>">
  <span class="number">
    <%= @id %>/<%= @sort %>
  </span>

  <span class="kind">
    <select>
      <optgroup label="Move to:" class="kinds">
      </optgroup>
    </select>
  </span>

  <span class="summary edit"><%= @summary %></span>

</div>
